
{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
<script src="../js/site.js"></script>
{{/partial}}

{{#partial "navbar"}}
venues
{{/partial}}

{{#partial "content"}}


<div class="main-container">
  <h1>All Venues</h1>
  
  <div class="row justify-content-between">
    <div class="col-md-3 filters-container" id="filterLooks"> 
      <h2>Filters</h2>
      <form action="/venues/" method="post">
         <div class="form-group">    
         <label for="name">Venue Name:</label><input class="form-control" type="text" name="name" id="name" placeholder="Search.." autofocus />    
         </div>
         
         <!-- Other filters / Search stuff goes here -->
      
         <button class="btn btn-primary" type="submit">Search!</button>
      </form>
    </div>
    <div class="col-md-1 filler"></div>
    
    <div class="col-md-8 panel panel-default" id="panelLooks">
    <div class="panel-heading">
        <div style="display: inline-block"><h3 class="panel-title">Keywords</h3></div>
            <div class="btn-group" data-toggle="buttons">
  				<label class="btn btn-primary active" data-value="listview">
    				<input class="view-toggle" type="radio" name="options"  id="option1" autocomplete="off" checked> List
				</label>
  				<label class="btn btn-primary" data-value="mapview" >
    				<input class="view-toggle" type="radio" name="options" id="option2" autocomplete="off"> Map
				</label>
  	  		</div>
     </div>
    <div id="display_map_view" style="display:none">{{#block "map_view"}}{{/block}}</div>
    <div id="display_list_view">{{#block "list_view"}}{{/block}}</div>
      
    </div>
  </div>

  <div class="row">
    <div class = "col-md-3 filters-container">
      <h3>Add a new venue</h3>
      <a class="btn btn-primary" role="button" onclick="location.href='/venues/new'">Add venue</a>
    </div>
  </div>
  
</div>

{{/partial}}

{{#partial "list_view"}}
      
      <table class="table table-striped table-hover">
        <tbody>
          {{#venues}}
            {{> venues/_detail}}
          {{/venues}}
        </tbody>
      </table>

{{/partial}}

{{#partial "map_view"}}

	{{> maps/_clustermap}}
      
{{/partial}}

{{> layouts/base title="EventLite venues"}}