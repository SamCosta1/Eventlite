{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
<link rel="stylesheet" href="../css/show.css">
{{/partial}}

{{#partial "navbar"}}
{{/partial}}

{{#partial "content"}}
  {{#venue}}
  
    
  <div class="header-container">
	<div class="title-container">		
		<div class="subtitle">View a Venue</div>
	</div>	
  </div>	
	
  <div class="subsection-title-container">
	<div class="main-content-container">
		<div class="subsubtitle">{{name}}</div>
	</div>
  </div>
    
  <div class="main-content-container">

    <div class="row">      
	     <div class="col-sm-4 no-pad">
	       <div class="panel panel-default" id ="info-panel">
	         <div class="panel-body">
	           <h4>Info</h4>
	           <div id = "info-content">
	             <div class="content-container">
	               <p>Capacity: {{capacity}}</p><br>
	               <p>{{addressLine1}}</p><p>{{addressLine2}}</p><p>{{streetName}}</p><p>{{city}}</p><p>{{postcode}}</p>
	             </div>
	             <div style="display: inline">
	             <form action="/venues/{{id}}/delete" method="post" style="display: inline">
 	  				<button class="btn btn-primary delete" type="submit">Delete</button>
	  			 </form>
	             <a class="btn btn-primary" id="back-button" role="button" onclick="goBack()">Back</a>
	  			 </div>
	           </div>
	         </div>
	       </div>
	     </div>
         
      
	      <div class="col-sm-8">
	        <div class="panel panel-default">
	          <div class="panel-body">
	            <h4>Events</h4>
	            {{#if events}}
	              <table class="table table-striped table-hover">
	                <tbody>
	                  {{#events}}
	                    {{> events/_detail}}
	                  {{/events}}
	                </tbody>
	              </table>
	            {{else}}
	              <p id = "no-description">No Events</p>
	            {{/if}}
	          </div>
	        </div>
	      </div>
    </div>
  </div>
  {{/venue}}
  
{{> layouts/_alert_dialog}}
  
{{/partial}}

{{> layouts/base title="EventLite event view"}}