{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
<link rel="stylesheet" href="../css/show.css">
{{/partial}}

{{#partial "navbar"}}
{{/partial}}

{{#partial "content"}}
  {{#venue}}
  <div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>{{name}}</h1>
    </div>
  </div>
    <div class="row">
      <div class="col-sm-4">
        <div class="row">
          <div class="col-sm-12">
            <div class="panel panel-default" id ="info-panel">
              <div class="panel-body">
                <h4>Info</h4>
                <div id = "info-content">
                  <div>
                    <p>Capacity: {{capacity}}</p>
                    <p>Address: {{address}}</p>
                  </div>
                  <a class="btn btn-primary" id="back-button" role="button" href="/events">Back</a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="panel panel-default" id ="map-panel">
              <div class="panel-body">
                <h4>Map</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>Events</h4>
            {{#if events}}
              {{#events}}
              <span onclick="window.document.location='/events/{{id}}';">
                {{name}}
              </span><br/>
              {{/events}}
            {{else}}
              <p id = "no-description">No Events</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/venue}}
{{/partial}}

{{> layouts/base title="EventLite event view"}}