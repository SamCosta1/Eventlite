{{#partial "head"}}
<link rel="stylesheet" href="../../css/main.css">
<link rel="stylesheet" href="../../css/show.css">
{{/partial}}

{{#partial "navbar"}}
{{/partial}}

{{#partial "content"}}
  {{#event}}
  
  <div class="header-container">
	<div class="title-container">		
		<div class="subtitle">View an Event</div>
	</div>	
</div>	
	
<div class="subsection-title-container">
	<div class="main-content-container">
		<div class="subsubtitle">{{name}}</div>
	</div>
</div>
    
  <div class="main-content-container">
	  <div class="row">
	    
	      <div class="row">
	        <div class="col-sm-4 no-pad">
	          <div class="panel panel-default" id ="info-panel">
	            <div class="panel-body">
	              <h4>Info</h4>
	              <div id = "info-content">
	                <div>
	                	<div class="link" onclick="window.document.location='/venues/{{venue.id}}';">
 				    		<a class="icon fa fa-map-marker"></a>{{venue.name}}
 				  		</div>
 						<div> <a class="icon glyphicon glyphicon-calendar"></a>{{date}}</div> 
 						<div> <a class="icon glyphicon glyphicon-time"></a>{{time}}</div>
	                </div>
	                <form action="/events/{{id}}/delete" method="post" style="display: inline">
 	  					<button class="btn btn-primary" type="submit">Delete</button>
	  			 	</form>
	                <a class="btn btn-primary" id="back-button" role="button" onclick="goBack()">Back</a>
	              </div>
	            </div>
	          </div>
	        </div>
	        
	        <div class="col-sm-8 no-pad">
	      		<div class="panel panel-default">
	        		<div class="panel-body">
	          			<h4>Description</h4>
	          			{{#if description}}
	          			  <p>{{description}}</p>
	          			{{else}}
	            		<p id = "no-description">No description</p>
	         			 {{/if}}
	        		</div>
	        	</div>
	      	</div>
	    </div>      
        {{> maps/_onemarkermap}}
	   
	   </div>
	</div>
	  
	<div class="subsection-title-container">
		<div class="main-content-container">
			<div class="subsubtitle">Tweet us!</div>
		</div>
	</div>

      <div class="panel tweet-container main-content-container">
      	<div class="panel-body {{status}}">
      	   <div class="status-bar panel">
      	   	  <div class="message">{{status-message}}</div>
      	   </div>
      	   <form action="/events/tweet/{{id}}" method="post">
      		  <div class="form-group">
      		  	<textarea class="form-control" type="text" name="tweet" id="tweet" placeholder="{{name}}"></textarea>
      		  </div>
      		  <button class="btn btn-primary" type="submit">Tweet!</button>
      		</form> 
      	</div>
      </div>
  	 {{/event}}      

 
{{/partial}}

{{> layouts/base title="EventLite event view"}}