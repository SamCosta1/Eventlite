{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
<link rel="stylesheet" href="../css/userevents.css">
{{/partial}}

{{#partial "navbar"}}
userevents
{{/partial}}

{{#partial "content"}}

<div class="main-container">
	<h1>Your events</h1>
	<div class="row justify-content-between">
		<div class="col-md-3">			
			<div class="input-group date" data-provide="datepicker">
				<input class="datepicker" data-date-format="mm/dd/yyyy">
			</div>			
		</div>
		<div class="col-md-1 filler"></div>
		<div class="col-md-8 panel panel-default" id="panelLooks">	
			<div class="panel-heading">
				<div style="display: inline-block"><h3 class="panel-title">Keywords</h3></div>
				<div class="dropdown" id="dropdown_sortby">
			    	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Sort by
			    	<span class="caret"></span></button>
			    	<ul class="dropdown-menu">
			      		<li><a href="#">Date</a></li>
			      		<li><a href="#">Venue</a></li>
			    	</ul>
			
				</div>
			</div>
			
			<table class="table table-striped table-hover">
			  <tbody>
			    {{#events}}
				      <tr class="{{#if pastEvent}}past-events{{/if}}">
				      	<td><div>
				      		<span class="glyphicon glyphicon-picture" aria-hidden="true" id="image_preview"></span>
				      		</div>
				      	</td>
				        <td id="event_preview">
				        	<i class="fa fa-bolt"></i> 
				        		<span onclick="window.document.location='/events/{{id}}';">
				        			Event: {{name}}
				        		</span><br />
				            <i class="fa fa-map-marker"></i> Venue: {{venue.name}}<br />
				            <i class="fa fa-calendar"></i> Date: {{date}}
				            {{#if pastEvent}}<span class="missed-notif"><i class="glyphicon glyphicon-exclamation-sign"></i> Missed it</span>{{/if}}<br />
				            <i class="fa fa-clock-o"></i> Time: {{time}}
				            
				        </td>
						<td id="event_preview"><button class="btn btn-primary" onclick="location.href='/events/{{id}}/update'">Update</button></td>
						
				      </tr>
			    {{/events}}
			  </tbody>
			</table>
		</div>
	</div>
	
	<div class="row map-container panel panel-default">
	MAP
	</div>

</div>

<script>
$(document).ready(function() {
	
	$('.datepicker').datepicker({
	    format: 'mm/dd/yyyy',
	    startDate: '-3d'
	});
	
});
</script>

{{/partial}}

