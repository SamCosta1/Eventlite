{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
{{/partial}}

{{#partial "content"}}
<h1>Add a new event</h1>
<div class="row">
  <div class = "col-md-3">
    <form method="post" action="/events/new">
      <div class="form-group {{#if errors.template}}has-error{{/if}}">
        <table>
          <tr>
            <td><label for="name">Name</label></td>
            <td><input class="form-control" type="text" name="name" id="name" placeholder="Name" autofocus value="{{name}}" /></td>
            <td class="text-danger">
              {{#if errors.name}}
                {{errors.name}}
              {{/if}}
            </td>
          </tr>
          
          <tr>
            <td><label for="date">Date</label></td>
            <td><input class="form-control" type="date" name="date" id="date" placeholder="yyyy-MM-dd" value="{{date}}" /></td>
            <td class="text-danger">
              {{#if errors.date}}
                {{errors.date}}
              {{/if}}
            </td>
          </tr>
          
          <tr>
        	<td><label for="time">Time</label></td>
        	<td><input class="form-control" type="time" name="time" id="time" placeholder="HH:mm" value="{{time}}" /></td>
		    <td class="text-danger">
              {{#if errors.time}}
                {{errors.time}}
              {{/if}}
            </td>
		  </tr>

          <tr>
        	<td><label for="venue">Venue</label></td>
        	<td>
          	  <select type="venue" name="venue" id="venue" value="{{venue}}" />
       	        <option selected value={{venue.id}}>{{venue.name}}</option>
       	        {{#venues}}
       	          <option value={{id}}>{{name}}</option>
       	        {{/venues}}
       	      </select>
       		</td>
       	    <td class="text-danger">
              {{#if errors.venue}}
                {{errors.venue}}
              {{/if}}
            </td>
       	  </tr>
       		
          <tr>
        	<td><label for="description">Description</label></td>
        	<td><input class="form-control" type="text" name="description" id="description" placeholder="Description" value="{{description}}" /></td>
            <td class="text-danger">
              {{#if errors.description}}
                {{errors.description}}
              {{/if}}
            </td>
          </tr>
        </table>
        
        {{#if errors.template}}
          <p class="text-danger">{{errors.template}}</p>
        {{/if}}
      </div>
  
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
</div>
{{/partial}}

{{> layouts/base title="EventLite New Event"}}
