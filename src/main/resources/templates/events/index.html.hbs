{{#partial "content"}}
<h1>All events</h1>
<div class="row">

	<div class="col-md-3 filters-container">	
		<h2>Filters</h2>
		<form action="/events/" method="post">
		   <div class="form-group">    
			 <label for="name">Event Name:</label><input class="form-control" type="text" name="name" id="name" placeholder="Search.." autofocus />    
		   </div>
		   
		   <!-- Other filters / Search stuff goes here -->
		
		   <button class="btn btn-primary" type="submit">Search!</button>
		</form>
	</div>
	
	<div class="col-md-9">
		<table class="table table-striped table-hover">
		  <thead>	
		  	<tr>	   
		      <th><i class="fa fa-bolt"></i> Event</th>
		      <th><i class="fa fa-map-marker"></i> Venue</th>
		      <th><i class="fa fa-calendar"></i> Date</th>
		      <th>Actions</th>
		    </tr>
		  </thead>
		  <tbody>
		    {{#events}}
		       <tr onclick="window.document.location='/events/{{id}}';">
		        <td>{{name}}</td>
		        <td>{{venue.name}}</td>
		        <td>{{date}}</td>
		        <td>
        	        <form action="/events/{{id}}/delete" method="post">  
	  			        <button class="btn btn-primary" type="submit">Delete</button>
	  		        </form>
	        	<td>
		      </tr>
		    {{/events}}
		  </tbody>
		</table>
	</div>
</div>

{{/partial}}

{{> layouts/base title="EventLite events"}}
