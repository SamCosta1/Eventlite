{{#partial "head"}}
<link rel="stylesheet" href="../css/main.css">
{{/partial}}

{{#partial "content"}}
<h1>All events</h1>
<div class="row">

	<div class="col-md-3 filters-container" id="filterLooks">	
		<h2>Filters</h2>
		<form action="/events/" method="post">
		   <div class="form-group">    
			 <label for="name">Event Name:</label><input class="form-control" type="text" name="name" id="name" placeholder="Search.." autofocus />    
		   </div>
		   
		   <!-- Other filters / Search stuff goes here -->
		
		   <button class="btn btn-primary" type="submit">Search!</button>
		</form>
	</div>
	
	<div class="panel panel-default" id="panelLooks">

<div class="panel-heading">
	<div style="display: inline-block"><h3 class="panel-title">Keywords</h3></div>
	<div class="dropdown" id="dropdown_sortby">
    	<button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Sort by
    	<span class="caret"></span></button>
    	<ul class="dropdown-menu">
      		<li><a href="#">Date</a></li>
      		<li><a href="#">Venue</a></li>
    	</ul>
	</div>
</div>

<table class="table table-striped table-hover">
  <tbody>
    {{#events}}
      <tr>
      	<td><div>
      		<span class="glyphicon glyphicon-picture" aria-hidden="true" id="image_preview"></span>
      		</div>
      	</td>
        <td id="event_preview">
        	<i class="fa fa-bolt"></i> Event: {{name}}<br />
            <i class="fa fa-map-marker"></i> Venue: {{venue.name}}<br />
            <i class="fa fa-calendar"></i> Date: {{date}}
        </td>
        <td id="event_preview">
        <form action="/events/{{id}}/delete" method="post">  
	  			        <button class="btn btn-default btn-sm" type="submit">
	  			        	<span class="glyphicon glyphicon-trash"></span> Delete
	  			        </button>
	  		        </form>
        </td>
      </tr>
    {{/events}}
  </tbody>
</table>
</div>
</div>



{{/partial}}

{{> layouts/base title="EventLite events"}}
